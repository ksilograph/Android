<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:baselineAligned="false"
        android:gravity="left|center"
        android:padding="24dp"
        android:text="@string/enter_cat_name"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!--android:ems="10"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="83dp"
            android:src="@drawable/bokal_img"
            android:tint="@color/colorAccent" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="86dp"
            android:src="@drawable/eda_img"
            android:tint="@color/colorPrimary" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="84dp"
            android:src="@drawable/sport_img"
            android:tint="@color/colorAccent" />

        <ImageView
            android:layout_width="111dp"
            android:layout_height="89dp"
            android:src="@drawable/container_img"
            android:tint="@color/colorPrimary" />
    </LinearLayout>

    <EditText
        android:id="@+id/cat_name"
        android:layout_width="410dp"
        android:layout_height="92dp"
        android:ems="10"
        android:hint="@string/enter_cat_name"

        android:inputType="textShortMessage"
        android:padding="24dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout_with_but"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/create_cat_but"
            android:layout_width="411dp"
            android:layout_height="75dp"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal|center"
            android:onClick="onClickCategoryCreated"
            android:text="@string/create"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>